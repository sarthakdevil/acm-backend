//connecting prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//creating user model
model User {
  Sno       Int      @id @default(autoincrement())
  username  String   @unique
  password  String   @unique
  role      Role // New field for user role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model blog {
  Sno        Int      @id @default(autoincrement())
  Title      String   @db.VarChar(200)
  Author     String   @db.VarChar(50)
  Content    String
  Category   String   @db.VarChar(50)
  Event      String   @db.VarChar(100)
  Image      String
  Date       DateTime @default(now())
  Isverified Boolean  @default(false)
}

model Certificate {
  id         Int      @id @default(autoincrement())
  uniqueid   Int      @unique
  name       String
  email      String
  college    String
  startdate  DateTime
  enddate    DateTime
  position   Int
  course     String
  enrollment String
}

model Member {
  id          Int      @id @default(autoincrement())
  image       String?
  Name        String
  linkedin    String?
  github      String?
  Instagram   String?
  year        String
  designation String
  added_on    DateTime
}

model Contact {
  id      Int    @id @default(autoincrement())
  name    String
  email   String @unique
  phone   String
  message String
}

model TeamUpdate {
  id         Int    @id @default(autoincrement())
  photoUrl   String
  position   String
  socialLink String
}

model OfficeBearer {
  id         Int    @id @default(autoincrement())
  photoUrl   String
  position   String
  socialLink String
}

model Office_bearer {
  id          Int     @id @default(autoincrement())
  name        String
  designation String
  linkedin    String?
  category    String?
}

model VisitorCount {
  id    Int @id @default(autoincrement())
  count Int
}

model Announcement {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime @default(now())
  image       String?
  link        String?  @db.VarChar(100)
}
